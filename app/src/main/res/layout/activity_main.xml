<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">

            <ImageView android:layout_width="wrap_content" android:layout_height="@dimen/normal_x3_margin"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       android:src="@drawable/ic_adidas_logo"
                       android:layout_marginTop="@dimen/normal_y3_margin"
                       android:layout_marginLeft="@dimen/normal_x3_margin"
                       android:adjustViewBounds="true"

                       android:id="@+id/logo"/>

            <ImageView android:layout_width="wrap_content" android:layout_height="@dimen/normal_x3_margin"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:src="@drawable/ic_shopping_bag"
                       android:layout_marginTop="@dimen/normal_y3_margin"
                       android:layout_marginRight="@dimen/normal_x3_margin"
                       android:adjustViewBounds="true"
            />

            <androidx.cardview.widget.CardView android:layout_width="@dimen/normal_cv_width"
                                               android:layout_height="@dimen/normal_cv_height"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:adjustViewBounds="true"
                                               app:layout_constraintTop_toBottomOf="@+id/logo"
                                               android:layout_marginTop="@dimen/normal_x2_margin"

                                               app:layout_constraintEnd_toStartOf="@id/cv_logo2"
                                               android:layout_marginLeft="@dimen/normal_x3_margin"
                                               android:id="@+id/cv_logo1"
                                               app:cardCornerRadius="@dimen/normal_x5_margin"
                                               app:cardElevation="0dp"
                                               app:cardBackgroundColor="@color/white"

                                               android:backgroundTint="@color/white"
                                               app:layout_constraintHorizontal_chainStyle="spread_inside"
            >
                <ImageView android:layout_width="match_parent" android:layout_height="@dimen/normal_size_logo"
                           android:src="@drawable/logo1"
                           android:layout_gravity="center"
                           android:adjustViewBounds="true"
                           android:padding="@dimen/normal_x_margin"
                />
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"

                                android:focusable="true"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_width="@dimen/normal_cv_width"
                                               android:layout_height="@dimen/normal_cv_height"
                                               app:layout_constraintStart_toEndOf="@id/cv_logo1"
                                               app:layout_constraintEnd_toStartOf="@id/cv_logo3"
                                               android:adjustViewBounds="true"
                                               app:layout_constraintTop_toTopOf="@id/cv_logo1"
                                               app:layout_constraintBottom_toBottomOf="@id/cv_logo1"
                                               android:id="@+id/cv_logo2"
                                               android:src="@drawable/logo2"
                                               app:cardCornerRadius="@dimen/normal_x5_margin"
                                               app:cardElevation="0dp"
                                               app:cardBackgroundColor="@color/white"

                                               android:backgroundTint="@color/white"
            >
                <ImageView android:layout_width="match_parent" android:layout_height="@dimen/normal_size_logo"
                           android:src="@drawable/logo2"
                           android:layout_gravity="center"
                           android:adjustViewBounds="true"
                           android:padding="@dimen/normal_x_margin"
                />
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"

                                android:focusable="true"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_width="@dimen/normal_cv_width"
                                               android:layout_height="@dimen/normal_cv_height"
                                               app:layout_constraintStart_toEndOf="@id/cv_logo2"
                                               app:layout_constraintEnd_toStartOf="@id/cv_logo4"
                                               android:adjustViewBounds="true"
                                               app:layout_constraintTop_toTopOf="@id/cv_logo1"
                                               app:layout_constraintBottom_toBottomOf="@id/cv_logo1"
                                               android:id="@+id/cv_logo3"
                                               android:src="@drawable/logo3"
                                               app:cardElevation="10dp"
                                               android:translationZ="30dp"
                                               app:cardBackgroundColor="@color/white"

                                               app:cardCornerRadius="@dimen/normal_x5_margin"
                                               android:backgroundTint="@color/white"
            >
                <ImageView android:layout_width="match_parent" android:layout_height="@dimen/normal_size_logo"
                           android:src="@drawable/logo3"
                           android:layout_gravity="center"
                           android:adjustViewBounds="true"
                           android:padding="@dimen/normal_x_margin"
                />
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"

                                android:focusable="true"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_width="@dimen/normal_cv_width"
                                               android:layout_height="@dimen/normal_cv_height"
                                               app:layout_constraintStart_toEndOf="@id/cv_logo3"
                                               app:layout_constraintEnd_toStartOf="@id/cv_logo5"
                                               android:adjustViewBounds="true"
                                               app:layout_constraintTop_toTopOf="@id/cv_logo1"
                                               app:layout_constraintBottom_toBottomOf="@id/cv_logo1"
                                               android:id="@+id/cv_logo4"
                                               android:src="@drawable/logo4"

                                               app:cardBackgroundColor="@color/white"
                                               app:cardCornerRadius="@dimen/normal_x5_margin"
                                               app:cardElevation="0dp"
                                               android:backgroundTint="@color/white"
            >
                <ImageView android:layout_width="match_parent" android:layout_height="@dimen/normal_size_logo"
                           android:src="@drawable/logo4"
                           android:layout_gravity="center"
                           android:adjustViewBounds="true"
                           android:padding="@dimen/normal_x_margin"
                />
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"

                                android:focusable="true"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_width="@dimen/normal_cv_width"
                                               android:layout_height="@dimen/normal_cv_height"
                                               app:layout_constraintStart_toEndOf="@id/cv_logo4"
                                               android:adjustViewBounds="true"
                                               app:layout_constraintTop_toTopOf="@id/cv_logo1"
                                               app:layout_constraintBottom_toBottomOf="@id/cv_logo1"
                                               android:id="@+id/cv_logo5"
                                               android:src="@drawable/logo5"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               app:cardCornerRadius="@dimen/normal_x5_margin"
                                               app:cardElevation="0dp"
                                               app:cardBackgroundColor="@color/white"
                                               android:backgroundTint="@color/white"
                                               android:layout_marginRight="@dimen/normal_x3_margin">
                <ImageView android:layout_width="match_parent" android:layout_height="@dimen/normal_size_logo"
                           android:src="@drawable/logo5"
                           android:layout_gravity="center"
                           android:adjustViewBounds="true"
                           android:padding="@dimen/normal_x_margin"
                />
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"

                                android:focusable="true"
                />

            </androidx.cardview.widget.CardView>
            <ImageView android:layout_width="0dp" android:layout_height="0dp"

                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       android:background="@color/colorwhiter"
                       app:layout_constraintBottom_toBottomOf="@+id/cv_logo1"
                       app:layout_constraintTop_toTopOf="@+id/cv_logo1"/>

            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/normal_y4_margin"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginLeft="@dimen/normal_x3_margin"
                      android:layout_marginRight="@dimen/normal_x3_margin"
                      android:text="Manchester United"
                      style="@style/title"
                      app:layout_constraintTop_toBottomOf="@+id/cv_logo1" android:id="@+id/title"/>
            <androidx.cardview.widget.CardView android:layout_width="30dp"
                                               android:layout_height="30dp"
                                               android:layout_marginTop="@dimen/normal_y2_margin"
                                               app:cardCornerRadius="@dimen/normal_x_margin"
                                               app:cardElevation="0dp"
                                               app:cardBackgroundColor="@color/redlight"
                                               android:backgroundTint="@color/redlight"
                                               app:layout_constraintTop_toBottomOf="@+id/title"
                                               app:layout_constraintStart_toStartOf="@+id/title"
                                               android:id="@+id/cardView">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:text="7"
                          style="@style/number"
                          android:textColor="@color/red"
                          android:gravity="center"
                />
            </androidx.cardview.widget.CardView>

            <View android:layout_width="2dp" android:layout_height="250dp"

                  android:background="@color/greylight"
                  app:layout_constraintTop_toBottomOf="@+id/cardView" app:layout_constraintEnd_toEndOf="@+id/cardView"
                  android:layout_marginTop="@dimen/normal_y3_margin"
                  app:layout_constraintStart_toStartOf="@+id/cardView" android:id="@+id/view"/>

            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/normal_y3_margin"

                      style="@style/title"
                      android:text="Kits"
                      android:gravity="center"
                      android:textSize="16sp"
                      android:rotation="270"
                      app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintEnd_toEndOf="@+id/cardView"
                      app:layout_constraintStart_toStartOf="@+id/cardView" android:id="@+id/textView"/>
            <androidx.recyclerview.widget.RecyclerView android:layout_width="0dp"
                                                       android:layout_height="0dp"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintTop_toTopOf="@+id/cardView"
                                                       app:layout_constraintStart_toEndOf="@+id/cardView"
                                                       android:orientation="horizontal"
                                                       android:layout_marginLeft="@dimen/normal_x_margin"
                                                       android:id="@+id/list_tshirt"
                                                       app:layout_constraintBottom_toBottomOf="@+id/textView">

            </androidx.recyclerview.widget.RecyclerView>
            <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toBottomOf="@id/textView"
                       android:layout_marginTop="@dimen/normal_y_margin"
                       android:src="@drawable/ic_divider"
                       android:id="@+id/divider"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:background="@color/grey"
                                                               app:layout_constraintTop_toBottomOf="@id/divider"
                                                               android:layout_height="100dp">
                <androidx.cardview.widget.CardView android:layout_width="30dp"
                                                   android:layout_height="30dp"
                                                   android:layout_marginTop="@dimen/normal_y2_margin"
                                                   app:cardCornerRadius="@dimen/normal_x_margin"
                                                   app:cardElevation="0dp"
                                                   app:cardBackgroundColor="@color/redlight"
                                                   android:backgroundTint="@color/redlight"
                                                   app:layout_constraintTop_toTopOf="parent"
                                                   app:layout_constraintStart_toStartOf="parent"
                                                   android:layout_marginLeft="@dimen/normal_x3_margin"
                                                   android:id="@+id/cardView2">
                    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                              android:text="11"
                              style="@style/number"
                              android:textColor="@color/red"
                              android:gravity="center"
                    />
                </androidx.cardview.widget.CardView>
                <View android:layout_width="2dp" android:layout_height="250dp"

                      android:background="@color/greylight"
                      app:layout_constraintTop_toBottomOf="@+id/cardView2"
                      app:layout_constraintEnd_toEndOf="@+id/cardView2"
                      android:layout_marginTop="@dimen/normal_y3_margin"
                      app:layout_constraintStart_toStartOf="@+id/cardView2" android:id="@+id/view2"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/normal_y3_margin"

                          style="@style/title"
                          android:text="Kits"
                          android:gravity="center"
                          android:textSize="16sp"
                          android:rotation="270"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/view2" app:layout_constraintEnd_toEndOf="@+id/cardView2"
                          app:layout_constraintStart_toStartOf="@+id/cardView2" android:id="@+id/textView2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>